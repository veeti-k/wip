{
	"name": "2tasks",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"clean": "rm -rf ./node_modules ./**/**/node_modules ./**/**/dist ./**/**/build ./**/**/.turbo",
		"db-generate": "turbo db-generate",
		"db-push": "yarn dotenv -e ./.env -- turbo db-push",
		"db-studio": "yarn dotenv -e ./.env -- turbo db-studio",
		"db-reset": "yarn dotenv -e ./.env -- turbo db-reset",
		"db": "docker run -d --name gym-db -e MYSQL_ROOT_PASSWORD=root -e MYSQL_DATABASE=gym -p 3306:3306 mysql",
		"dev": "yarn dotenv -e ./.env -- turbo dev --parallel",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"checks": "turbo checks",
		"lint": "turbo lint"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.0.0",
		"@types/eslint": "^8.4.10",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.28.0",
		"prettier": "^2.8.0",
		"prettier-plugin-tailwindcss": "^0.2.0",
		"turbo": "^1.4.4",
		"typescript": "^4.9.3"
	},
	"packageManager": "yarn@1.22.19"
}
